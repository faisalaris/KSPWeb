<style>
    /* Navbar Background Gradasi */
    .top-row {
        background: linear-gradient(to right, green, yellow) !important;
    }

    /* Sidebar Background Gradasi */
    .nav-container {
        background: linear-gradient(to bottom, green, yellow);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Menjaga logo tetap di bawah */
        padding-top: 10px;
    }

    .nav-scrollable {
        overflow-y: auto;
        flex-grow: 1; /* Menu tetap fleksibel */
    }

    .logo-container {
        text-align: center;
        padding: 10px;
    }

    .logo {
        width: 40%;
        max-width: 150px;
    }

    .nav-link {
        color: white !important;
        font-weight: bold;
        display: block;
        padding: 10px;
        border-radius: 5px;
        transition: background 0.3s;
    }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.3);
        }
</style>

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">KSP</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-container" @onclick="ToggleNavMenu">
    <nav class="flex-column nav-scrollable">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
    </nav>

    <!-- Logo di bagian bawah navbar -->
    <div class="logo-container">
        <img src="/images/logo.png" alt="Logo" class="logo" />
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
